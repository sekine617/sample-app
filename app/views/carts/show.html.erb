<div class="contents mt-4">
    <div class="card">
        <div class="card-body contents mt-4">
            <h4 class="card-title">ショッピングカート</h4>
            <% if @cart_items.present? %>
            <div class="text-right">
                <h5 class="mr-4">価格</h5>
            </div>
            <hr>
            <%= render partial: 'bill', locals: {cart_items: @cart_items } %>
            <div class="text-center mb-4">
            <%= link_to '注文する', new_order_path, class: 'btn btn-primary order-btn' %>
            </div>
            <% else %>
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">現在カートに商品はありません</h5>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>