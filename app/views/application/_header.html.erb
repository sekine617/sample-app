    <header class="site-header">
        <div class="wrapper site-header__wrapper">
            <div class="site-header__start ml-4">
                <%= link_to 'スイーツデリ', root_path, class: 'brand text-nowrap' %>
            </div>
            <div class="search text-nowrap">
                <form class="form-inline search-box">
                    <%= search_form_for @search do |f| %>
                    <%= f.search_field :name_cont , class:'form-control mr-sm-2 search-input', placeholder: "商品名を入力" %>
                    <%= f.submit class: 'btn btn-outline-info w-10 my-2 my-sm-0' %>
                    <% end %>
                </form>
            </div>
            <div class="site-header__end">
                <nav class="nav">
                    <ul class="nav__wrapper mt-2 mb-2 mr-4">
                        <div class="nav__item text-center">
                            <%= link_to root_path do %>
                            <i class="fas fa-home"></i><br>
                            <span class="text-nowrap">ホーム</span>
                            <% end %>
                        </div>
                        <div class="nav__item text-center">
                            <%= link_to products_path do %>
                            <i class="fas fa-birthday-cake"></i><br>
                            <span class="text-nowrap">商品一覧</span>
                            <% end %>
                        </div>
                        <div class="nav__item text-center dropdown">
                            <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i><br>
                                <span class="text-nowrap">ユーザー</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <% if user_signed_in? %>
                                <%= link_to 'マイページ', mypage_path, class: 'dropdown-item' %>
                                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
                                <% else %>
                                <%= link_to '登録', new_user_registration_path, class: 'dropdown-item' %>
                                <%= link_to 'ログイン', new_user_session_path, class: 'dropdown-item' %>
                                <% end %>
                            </div>
                        </div>
                        <div class="nav__item text-center">
                            <%= link_to carts_path do %>
                            <i class="fas fa-shopping-cart"></i><br>
                            <span class="text-nowrap">カート</span>
                            <% end %>
                        </div>
                    </ul>
                </nav>
            </div>
        </div>
    </header>