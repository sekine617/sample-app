    <div class="card border-light mb-3">
        <h4 class="card-header bg-white text-center"><%= title %></h4>
        <div class="card-group mt-4">
            <% products.each do |product| %>
            <div class="card">
                <div class="product-img">
                    <% if product.image? %>
                    <%= image_tag product.image.url, :width => '100%', :height => '225', class: 'index-img' %>
                    <% else %>
                    <%= image_tag "/assets/img2.jpeg", :width => '100%', :height => '225', class: 'index-img' %>
                    <% end %>
                    <div class="like-btn" id="like-btn-<%= product.id %>">
                        <%= render 'likes/like', product: product %>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <h6 class="card-title"><i class="fas fa-store-alt mr-2"></i><%= link_to  "#{product.shop.name}", shop_path(product.shop.id), class: ''%></h6><br>
                    <div class="text-right">
                        <%= link_to "詳細", product, class: 'btn btn-outline-info w-10' %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>