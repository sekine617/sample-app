<%= render 'shared/error_messages' %>

<div class="rating-box mt-3">
<div class="p-review__formBox">
  <h5 class="p-review__formTitle">レビュー投稿</h5>
  <%= form_with model: review, url: product_reviews_path(product), local: true do |f| %>
    <div class="form-group">
        <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment, class: 'form-control comment_area', rows: 4, cols: 100 %>
    </div>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.hidden_field :rate, id: "rating-value" %>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>

<%= javascript_include_tag "reviews.js" %>