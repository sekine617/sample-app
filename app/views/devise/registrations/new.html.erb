<div class="signup-form my-4 pb-3">
    <div class="head">
        <h2 class="head-text">新規登録</h2>
    </div>
    <div class="container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-row">
            <div class="col-md-1"></div>
            <div class="col-md-5 name-form form-group">
                <%= f.label :last_name, '姓' , class: 'input-label' %><br>
                <%= f.text_field :last_name, class: 'input-name input-form' %>
            </div>
            <div class="col-md-5 name-form form-group">
                <%= f.label :first_name, '名', class: 'input-label' %><br>
                <%= f.text_field :first_name, class: 'input-name input-form' %>
            </div>
            <div class="col-md-1"></div>
        </div>

        <div class="form-row">
            <div class="col-md-1"></div>
            <div class="col-md-5 name-form  form-group">
                <%= f.label :last_hurigana, 'セイ', class: 'input-label' %><br>
                <%= f.text_field :last_hurigana, class: 'input-name input-form' %>
            </div>
            <div class="col-md-5 name-form form-group">
                <%= f.label :first_hurigana, 'メイ', class: 'input-label' %><br>
                <%= f.text_field :first_hurigana, class: 'input-name input-form' %>
            </div>
            <div class="col-md-1"></div>
        </div>

        <div class="field mb-3 mt-3">
            <%= f.label :email, class: 'input-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input-form long-form" %>
        </div>

        <div class="field mb-3">
            <%= f.label :password, class: 'input-label' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "new-password", class: "input-form long-form" %>
        </div>

        <div class="field mb-3">
            <%= f.label :password_confirmation, class: 'input-label' %><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input-form long-form" %>
        </div>

        <div class="actions">
            <%= f.submit "登録" ,class: 'button' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>