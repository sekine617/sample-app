<div class="signup-form my-4 pb-3">
    <div class="head">
        <h2 class="head-text">プロフィール編集</h2>
    </div>
    <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :email, class: 'input-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-form long-form" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-3">
          新しい<%= f.label :password, class: 'input-label' %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "input-form long-form" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %>文字以上</em>
          <% end %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, class: 'input-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-form long-form" %>
        </div>

        <div class="field mb-3">
          <%= f.label :current_password, class: 'input-label' %> <i>新しいパスワード</i><br>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input-form long-form" %>
        </div>

        <div class="actions">
          <%= f.submit "Update",class: 'button' %>
        </div>
      <% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
